<div class="field">
  <div class="ui left aligned grid">
    <div class="<%= pagename %>-frame-of-label sixteen wide column">
      <%= f.label :name, 'ユーザー名' %>
    </div>
    <div class="<%= pagename %>-frame-of-input sixteen wide column">
      <div class="ui left icon huge input">
        <%= f.text_field :name, :placeholder => "例：taro" %>
        <i class="user icon"></i>
      </div>
    </div>
  </div>
</div>

<div class="field">
  <div class="ui left aligned grid">
    <div class="<%= pagename %>-frame-of-label sixteen wide column">
      <%= f.label :email, 'メールアドレス' %>
    </div>
    <div class="<%= pagename %>-frame-of-input sixteen wide column">
      <div class="ui left icon huge input">
        <%= f.email_field :email, :placeholder => "例：case@example.com" %>
        <i class="mail icon"></i>
      </div>
    </div>
  </div>
</div>

<div class="field">
  <div class="ui left aligned grid">
    <div class="<%= pagename %>-frame-of-label sixteen wide column">
      <%= f.label :password, 'パスワード' %>
    </div>
    <div class="<%= pagename %>-frame-of-input sixteen wide column">
      <div class="ui left icon huge input">
        <%= f.password_field :password, :placeholder => "例：1234asdf" %>
        <i class="lock icon"></i>
      </div>
    </div>
  </div>
</div>

<div class="field">
  <div class="ui left aligned grid">
    <div class="<%= pagename %>-frame-of-label sixteen wide column">
      <%= f.label :password_confirmation, 'パスワード (確認)' %>
    </div>
    <div class="<%= pagename %>-frame-of-input sixteen wide column">
      <div class="ui left icon huge input">
        <%= f.password_field :password_confirmation, :placeholder => "例：1234asdf" %>
        <i class="lock icon"></i>
      </div>
    </div>
  </div>
</div>
