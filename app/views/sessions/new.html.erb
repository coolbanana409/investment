<%= form_for(:session, url: login_path) do |f| %>
  <div class="ui grid">
    <div class="two wide column"></div>

    <div class="twelve wide column">
      <div class="ui placeholder segment">
        <div class="ui two column very relaxed stackable grid">

          <div class="one wide column"></div>

          <div class="thirteen wide column">
            <h1 class="center aligned">ログインをしてください</h1>

            <div class="ui form">
              <div class="field">
                <%= f.label :email, 'メールアドレス' %>
                <div class="ui left icon huge input">
                  <%= f.email_field :email, :placeholder => "例：case@example.com" %>
                  <i class="mail icon"></i>
                </div>
              </div>

              <div class="field">
                <%= f.label :password, 'パスワード' %>
                <div class="ui left icon huge input">
                  <%= f.password_field :password, :placeholder => "例：1234asdf" %>
                  <i class="lock icon"></i>
                </div>
                <%= link_to "パスワードを忘れた方はここをクリック", new_password_reset_path %>
              </div>

              <%= f.label :remember_me, class: "checkbox inline" do %>
                <%= f.check_box :remember_me %>
                <span>常にログイン状態にする</span>
              <% end %>

            <div class="one wide column"></div>

            <div class="ui grid">
              <div class="five wide column"></div>

              <div class="seven wide column">
                <%= button_tag :type => "submit", :class =>"ui massive blue submit button" do %>
                  <i class="sign in alternate icon"></i>ログイン
                <% end %>
              </div>

              <div class="four wide column"></div>
            </div>
          </div>

          <div class="ui horizontal divider">
            または
          </div>

          <div class="ui grid">
            <div class="five wide column"></div>

            <div class="seven wide column">
              <div class="ui massive button">
                <i class="pencil alternate icon"></i>
                <%= link_to '新規登録', signup_path %>
              </div>
            </div>

            <div class="four wide column"></div>
          </div>
        </div>
      </div>
    </div>
    <div class="two wide column"></div>
  </div>
<% end %>
