<div>
  <h1>Log in</h1>
</div>

<div>
  <div>
    <%= form_for(:session, url: login_path) do |f| %>

      <div>
        <%= f.label :email, 'Email' %>
        <%= f.email_field :email %>
      </div>

      <div>
        <%= f.label :password, 'Password' %>
        <%= f.password_field :password %>
      </div>

      <%= f.submit 'Log in' %>
    <% end %>

    <p>New user? <%= link_to 'Sign up now!', signup_path %></p>
  </div>
</div>
