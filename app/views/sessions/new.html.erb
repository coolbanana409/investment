<%= form_for(:session, url: login_path) do |f| %>
  <div class="ui center aligned grid">
    <div class="fourteen wide column">
      <div id="please-login">ログイン</div>

      <div class="ui form">
        <div class="mobile field">
          <div class="ui left aligned grid">
            <div class="login-page-frame-of-email-label sixteen wide column">
              <%= f.label :email, 'メールアドレス' %>
            </div>
            <div class="login-page-frame-of-email-input sixteen wide column">
              <div class="ui left icon huge input">
                <%= f.email_field :email, :placeholder => "例：case@example.com" %>
                <i class="mail icon"></i>
              </div>
            </div>
          </div>
        </div>
        <div class="pc field">
          <div class="ui center aligned grid">
            <div class="login-page-frame-of-email-label left aligned twelve wide column">
              <%= f.label :email, 'メールアドレス' %>
            </div>
            <div class="login-page-frame-of-email-input left aligned twelve wide column">
              <div class="ui left icon huge input">
                <%= f.email_field :email, :placeholder => "例：case@example.com" %>
                <i class="mail icon"></i>
              </div>
            </div>
          </div>
        </div>

        <div class="mobile field">
          <div class="ui left aligned grid">
            <div class="login-page-frame-of-password-label sixteen wide column">
              <%= f.label :password, 'パスワード' %>
            </div>
            <div class="login-page-frame-of-password-input sixteen wide column">
              <div class="ui left icon huge input">
                <%= f.password_field :password, :placeholder => "例：1234asdf" %>
                <i class="lock icon"></i>
              </div>
            </div>
            <div class="ui left aligned grid">
              <div class="sixteen wide column">
                パスワードを忘れた方は<%= link_to "こちら", new_password_reset_path %>をクリック
              </div>
            </div>
            <div class="ui left aligned grid">
              <div id="always-login" class="sixteen wide column">
                <%= f.label :remember_me, class: "checkbox inline" do %>
                  <%= f.check_box :remember_me, :class => "ui checkbox" %>
                  常にログイン状態にする
                <% end %>
              </div>
            </div>
          </div>
        </div>
        <div class="pc field">
          <div class="ui center aligned grid">
            <div class="login-page-frame-of-password-label left aligned twelve wide column">
              <%= f.label :password, 'パスワード' %>
            </div>
            <div class="login-page-frame-of-password-input left aligned twelve wide column">
              <div class="ui left icon huge input">
                <%= f.password_field :password, :placeholder => "例：1234asdf" %>
                <i class="lock icon"></i>
              </div>
            </div>
            <div class="ui center aligned grid">
              <div class="left aligned twelve wide column">
                パスワードを忘れた方は<%= link_to "こちら", new_password_reset_path %>をクリック
              </div>
            </div>
            <div class="ui center aligned grid">
              <div id="always-login" class="left aligned twelve wide column">
                <%= f.label :remember_me, class: "checkbox inline" do %>
                  <%= f.check_box :remember_me, :class => "ui checkbox" %>
                  常にログイン状態にする
                <% end %>
              </div>
            </div>
          </div>
        </div>

        <div class="mobile field">
          <div class="ui center aligned grid">
            <%= button_tag :type => "submit", :id => "login-page-frame-of-login", :class =>"ui blue submit button ten wide column" do %>
              <i class="sign in alternate icon"></i>
              ログイン
            <% end %>
          </div>
        </div>
        <div class="pc field">
          <div class="ui center aligned grid">
            <%= button_tag :type => "submit", :id => "login-page-frame-of-login", :class =>"ui blue submit button eight wide column" do %>
              <i class="sign in alternate icon"></i>
              ログイン
            <% end %>
          </div>
        </div>

        <div class="ui horizontal divider">
          または
        </div>

        <div class="mobile field">
          <div class="ui center aligned grid">
            <div id="login-page-frame-of-signup" class="ui button ten wide column">
              <i class="pencil alternate icon"></i>
              <%= link_to '新規登録', signup_path %>
            </div>
          </div>
        </div>
        <div class="pc field">
          <div class="ui center aligned grid">
            <div id="login-page-frame-of-signup" class="ui button eight wide column">
              <i class="pencil alternate icon"></i>
              <%= link_to '新規登録', signup_path %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
