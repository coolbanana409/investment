<%= form_for(@event) do |f| %>
  <div class="ui center aligned grid">
    <div class="fourteen wide column">
      <div id="please-post-or-update-event">イベントの投稿</div>
      <div class="depend-on-device ui form">
        <%= render partial: "partials/events/form", locals: { f: f } %>
        <div class="ui center aligned grid">
          <%= button_tag :type => "submit", :class =>"ui blue submit button ten wide column", :id => "event-update-page-frame-of-submit" do %>
            <i class="pencil alternate icon"></i>
            投稿する
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>

<script>
  new Vue({
    el: "#event-form",
    methods: {
      checkFileSize: function() {
        var eventPicture = document.getElementById("event_picture")
        var eventPictureSizeInMegabytes = eventPicture.files[0].size/1024/1024;

        if (eventPictureSizeInMegabytes > 5) {
          alert("ファイルサイズは最大で5MBまでです。それよりも小さいファイルを選択してください。");
        }
      },
    },
  })
</script>
