  <% unless flash[:error_count].nil? && flash[:error_content].nil? %>
    <div class="warning message frame-of-error-message ui grid">
      <ul class="error-message">
        <% flash.each do |message_type, message| %>
          <% if message_type == "error_count" %>
            <h4><%= flash[:error_count] %>件のエラーがあります。</h4>
          <% end %>
          <% if message_type == "error_content" %>
            <% flash[:error_content].each do |e| %>
              <li><%= e %></li>
            <% end %>
          <% end %>
        <% end %>
      </ul>
    </div>
  <% end %>
